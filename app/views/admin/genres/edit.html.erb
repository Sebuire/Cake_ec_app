<%= render 'layouts/admin_header' %>

<div class="container">
	<div class="row">
		<div class="col-xs-6 col-xs-offset-3">
			<h2 class="title">ジャンル編集</h2>
			<table class="table">
				<thead>
					<tr>
						<th>ジャンル名</th>
						<th>状態</th>
						<th></th>
					</tr>
				</thead>
				<tbody>
					<%= form_for @genre, url:admin_genre_path(@genre) do |g| %>
						<tr>
							<td><%= g.text_field :name, class: "form-control", style: "width: 70%;" %>
							</td>
							<td>有効　<%= g.check_box :is_active %>
							</td>
							<td><%= g.submit '更新', class: "btn btn-default" %>
							</td>
						</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
	<div class="row">
		<div class="col-xs-10 col-xs-offset-1">
			<div style="text-align: center;">
			<%= link_to "戻る", admin_genres_path, class: "btn btn-default", style: "margin: 30px 0;" %>
			</div>
		</div>
	</div>
</div>

<%= render 'layouts/admin_footer' %>