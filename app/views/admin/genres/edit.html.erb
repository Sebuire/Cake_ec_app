<%= render 'layouts/admin_header' %>
	<div class="container">
		<h1>ジャンル情報編集画面</h1>
		<%= form_for(@genre) do |f| %>
			<%= f.text_field :name %>
			<%= f.check_box :is_active %>
			<%= f.submit "変更保存" %>
			<!-- リダイレクトがおかしい -->
		<% end %>
		<div>
			<button style="padding: 5px 15px; margin: 5px;"><%= link_to "ジャンル一覧へ", admin_genres_path %></button>
		</div>
	</div>
<%= render 'layouts/admin_footer' %>
