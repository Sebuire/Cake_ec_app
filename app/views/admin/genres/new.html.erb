<%= render 'layouts/admin_header' %>
	<div class="container">
		<h1 class="title">ジャンル追加</h1>
		<table class="table">
			<th>ジャンル名</th>
			<th>取り扱い状況</th>
			<th></th>
			<%= form_for @genre, url:admin_genres_path do |f| %>
				<tr>
					<td>
						<%= f.text_field :name %>
					</td>
					<td>
						<%= f.check_box :is_active %>
					</td>
					<td>
						<%= f.submit "追加", class: "btn btn-default" %>
					</td>
				</tr>
			<% end %>
		</table>
		<%= link_to "戻る", admin_genres_path, class: "btn btn-default", style: "margin: 15px 0;" %>
		</div>
	</div>
<%= render 'layouts/admin_footer' %>