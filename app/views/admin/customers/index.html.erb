

<%= render 'layouts/admin_header' %>

<div class="container">
	<div class="row">
		<div class="col">
			<table class="table col-lg-9">
				<h1 class="title">顧客一覧</h1>
				<thead>
					<th>顧客ID</th>
					<th>顧客名</th>
					<th></th>
				</thead>
				<tbody>
					<% @customers.each do |customer| %>
						<tr>
							<td><%= customer.id %></td>
							<td>
								<%= customer.name_last_kanji %>
								<%= customer.name_first_kanji %>
							</td>
							<td><%= link_to "詳細",admin_customer_path(customer.id), class: "btn btn-default" %> </td>
						</tr>
					<% end %>
				</tbody>
			</table>
			<%= link_to '管理者TOP', admins_path, class: "btn btn-default", style: "margin: 15px 0;" %>
		</div>
	</div>
</div>

<%= render 'layouts/admin_footer' %>
