<%= render 'layouts/admin_header' %>

<div class="container">
	<div class="row">
		<div class="col">
			<h1 class="title">顧客詳細</h1>
			<table class="table col-lg-9">
				<thead>
					<tr>
						<th>氏名(漢字)</th>
						<th>氏名(カナ)</th>
						<th>email</th>
						<th>電話番号</th>
						<th></th>
					</tr>
				</thead>
				<tbody>

					<tr>
						<td>
							<%= @customer.name_last_kanji %>
							<%= @customer.name_first_kanji %>
						</td>
						<td>
							<%= @customer.name_last_kana %>
							<%= @customer.name_first_kana %>
						</td>
						<td>
							<%= @customer.email %>
						</td>
						<td>
							<%= @customer.phone_number %>
						</td>
						<td>
							<%= link_to "退会", admin_customer_path(@customer), class: "btn btn-default" %>
						</td>
					</tr>
				</tbody>
			</table>
			<table class="table">
				<% @customer.addresses.each do |a| %>
						<th>配送先<%= @number += 1 %></th>
						<tr>
							<td>
								<%= a.address %>
							</td>
						</tr>
				<% end %>
			</table>
			<%= link_to '顧客一覧に戻る', admin_customers_path, class: "btn btn-default", style: "margin: 15px 0;" %>
		</div>
	</div>
</div>

<%= render 'layouts/admin_footer' %>
