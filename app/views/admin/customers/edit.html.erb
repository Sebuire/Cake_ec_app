<%= render 'layouts/admin_header' %>
<div class="container">
	<div class="row">
		<div class="col">
	    	<h1 class="title">顧客情報編集</h1>
	    	<%= form_for(@customer) do |f| %>
		        <h3>顧客名</h3>
		        <%= f.text_field :name_last_kanji %>
		        <%= f.text_field :name_first_kanji %>
		        <%= f.submit '更新', class: "btn btn-default" %>
		        <%= link_to '退会', admin_customer_path(@customer),class: "btn btn-default", method: :delete %>
	    	<% end %>
	    <%= link_to '戻る', admin_customer_path(@customer), class: "btn btn-default", style: "margin: 15px 0;" %>
		</div>
	</div>
</div>
<%= render 'layouts/admin_footer' %>


