<%= render "layouts/admin_header" %>
	<div class="container">
		<div class="row">
			<div class="col">
				<table class="table table-bordered" style="width: 40%; margin: 0 auto;">
					<h3 class="title">注文情報</h3>
					<tr>
						<th>注文ID</th><td><%= @order_item.id %></td>
					</tr>
						<tr>
							<th>注文日時</th><td><%= @order_item.created_at.strftime('%Y/%m/%d') %></td>
						</tr>
					<tr>
						<th>購入者</th><td><%= @order_item.order.customer.name_last_kanji %><%=@order_item.order.customer.name_first_kanji %></td>
					</tr>
					<tr>
						<th>商品名</th><td><%= @order_item.item.name %></td>
					</tr>
				</table>
				<h3 class="title">製作ステータス</h3>
				<div style="text-align: center;">
					<%= form_for @order_item, url:admin_order_item_path(@order_item) do |f| %>
		    		<lavel class="status"><%= f.radio_button :making_status, :着手不可 %>
		    		着手不可	</lavel>
		    		<lavel class="status"><%= f.radio_button :making_status, :製作待ち %>
		    		製作待ち</lavel>
		    		<lavel class="status"><%= f.radio_button :making_status, :製作中 %>
		    		製作中</lavel>
		    		<lavel class="status"><%= f.radio_button :making_status, :製作完了 %>
		    		製作完了</lavel><br>
		    		<%= f.submit '更新', class:"btn btn-default", style: "margin: 15px 0;" %>
	    		<% end %>
	    		<%= link_to '戻る', admin_order_path(@order_item.order_id), class:"btn btn-default", style: "margin-bottom: 15px;"  %>
				</div>
			</div>
		</div>
	</div>
<%= render "layouts/admin_footer" %>