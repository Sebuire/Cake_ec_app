<%= render 'layouts/admin_header' %>

<% if flash[:notice] %>
  <p style="color: lime; text-align: center"><%= flash[:notice] %></p>
<% end %>

<div class="container">
	<div class="row">
		<h2 class="title col-xs-10 col-xs-offset-1">商品詳細</h2>
			<div class="col-xs-4 col-xs-offset-1" style= " text-align: center">
				<div><%= attachment_image_tag @item, :image, style: " width: 60%;", fallback: "noimage.jpg" %></div>
			</div>
			<div class="col-xs-6">
				<table class="table">
					<% if @item.genre.is_active == true %>
						<tr>
							<th>ジャンル名</th><td><%= @item.genre.name %></td>
						</tr>
						<tr>
							<th>商品名</th><td><%= @item.name %></td>
						</tr>
						<tr>
							<th>商品説明</th><td><%= @item.body %></td>
						</tr>
						<tr>
							<th>税込価格（税抜価格）</th><td><%= @tax_in %>（<%= @item.price %>）円</td>
						</tr>
						<% if @item.sales_status == true %>
							<tr><th>販売ステータス</th><td>販売中</td></tr>
						<% else %>
							<tr><th>販売ステータス</th><td>売り切れ</td></tr>
						<% end %>
					<% else %>
						<tr>
							<th>ジャンル名</th><td><%= @item.genre.name %>(取り扱い中止)</td>
						</tr>
						<tr>
							<th>商品名</th><td><%= @item.name %></td>
						</tr>
						<tr>
							<th>商品画像</th><td><%= attachment_image_tag @item, :image, :fill, 100, 100, format: 'jpeg', fallback: "noimage.jpg" %></td>
						</tr>
						<tr>
							<th>商品説明</th><td><%= @item.body %></td>
						</tr>
						<tr>
							<th>税込価格（税抜価格）</th><td>@with_tax（<%= @item.price %>）円</td>
						</tr>
						<tr>
							<th>販売ステータス</th><td>販売停止</td>
						</tr>
					<% end %>
				</table>
				<div style="text-align: right;">
					<%= link_to "編集", edit_admin_item_path(@item.id), class: "btn btn-default" %>
				</div>
			</div>
	</div>
	<div class="row">
		<div class= "col-xs-10 col-xs-offset-1" style="text-align: center;">
			<%= link_to "商品一覧に戻る", admin_items_path, class: "btn btn-default", style: "margin: 30px 0px;" %>
		</div>
	</div>
</div>

<%= render 'layouts/admin_footer' %>
