<%= render 'layouts/admin_header' %>

<div class="container">
	<h1>商品詳細</h1>
	<table class="table">
		<thead>
			<tr>
				<th><h4>ジャンル</h4></th>
				<td><%= @item.genre.name %></td>
			</tr>
			<tr>
				<th><h4>商品名</h4></th>
				<td><%= @item.name %></td>
			</tr>
			<tr>
				<th><h4>商品画像</h4></th>
				<td><%= attachment_image_tag @item, :image %></td>
			</tr>
			<tr>
				<th><h4>商品説明</h4></th>
				<td><%= @item.body %></td>
			</tr>
			<tr>
				<th><h4>値段</h4></th>
				<td><%= @item.price %></td>
			</tr>
			<tr>
				<th><h4>販売ステータス</h4></th>
				<td><%= @item.sales_status %></td>
			</tr>
		</thead>
	</table>

	<%= link_to "編集", edit_admin_item_path, class: "btn btn-success" %>
	<%= link_to "削除", admin_item_path, method: :delete, class: "btn btn-danger" %>
</div>

<%= render 'layouts/admin_footer' %>
