<%= render 'layouts/admin_header' %>

<div class="container">
	<div class="row">
		<div class="col-xs-6 col-xs-offset-3">
			<h1 class="title">商品詳細</h1>
			<table class="table">
				<% if @item.genre.is_active == true %>
					<tr>
						<th>ジャンル名</th><td><%= @item.genre.name %></td>
					</tr>
					<tr>
						<th>商品名</th><td><%= @item.name %></td>
					</tr>
					<tr>
						<th>商品画像</th><td><%= attachment_image_tag @item, :image %></td>
					</tr>
					<tr>
						<th>商品説明</th><td><%= @item.body %></td>
					</tr>
					<tr>
						<th>価格</th><td><%= @item.price %>円</td>
					</tr>
					<% if @item.sales_status == true %>
						<tr><th>販売ステータス</th><td>販売中</td></tr>
					<% else %>
						<tr><th>販売ステータス</th><td>売り切れ</td></tr>
					<% end %>
				<% else %>
					<tr>
						<th>ジャンル名</th><td><%= @item.genre.name %>(取り扱い中止)</td>
					</tr>
					<tr>
						<th>商品名</th><td><%= @item.name %></td>
					</tr>
					<tr>
						<th>商品画像</th><td><%= @item.image %></td>
					</tr>
					<tr>
						<th>商品説明</th><td><%= @item.body %></td>
					</tr>
					<tr>
						<th>価格</th><td><%= @item.price %>円</td>
					</tr>
					<tr>
						<th>販売ステータス</th><td>販売停止</td>
					</tr>
				<% end %>
			</table>
			<div style="text-align: center;">
				<%= link_to "編集", edit_admin_item_path(@item.id), class: "btn btn-default" %>
						<%= link_to "削除", admin_item_path, method: :delete, class: "btn btn-default" %><br>
				<%= link_to "商品一覧に戻る", admin_items_path, class: "btn btn-default", style: "margin: 15px 0px;" %>
			</div>
		</div>
	</div>
</div>

<%= render 'layouts/admin_footer' %>
