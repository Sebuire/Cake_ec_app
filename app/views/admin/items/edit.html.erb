<%= render 'layouts/admin_header' %>

<div class="container">
	<h1 class="title">商品情報編集</h1>
	<table class="table">
		<%= form_for(@item,url:admin_item_path) do |f| %>
			<tr>
				<th>商品名</th><td><%= f.text_field :name, autofocus: true, placeholder: "name", class: "" %></td>
			</tr>
			<tr>
				<th>商品説明</th><td><%= f.text_area :body, placeholder: "body", style: "width: 80%; height: 80px;" %></td>
			</tr>
			<tr>
				<th>商品画像</th><td><%= f.attachment_field :image, placeholder: "image" %></td>
			</tr>
			<tr>
				<th>価格</th><td><%= f.text_field :price, placeholder: "price" %></td>
			</tr>
			<tr>
				<th>販売ステータス</th><td><%= f.check_box :sales_status %><br></td>
			</tr>
			<tr>
				<th></th><td><%= f.submit '更新', class: "btn btn-default", style: "margin: 15px 0; width: 58%;" %></td>
			</tr>
		<% end %>
	</table>
	<div style="text-align: center;">
		<%= link_to "戻る", admin_item_path, class: "btn btn-default", style: "margin-bottom: 15px;" %>
	</div>
</div>

<%= render 'layouts/admin_footer' %>