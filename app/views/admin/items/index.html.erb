<%= render 'layouts/admin_header' %>

<div class="container">
	<div class="row">
		<div class="col-xs-8 col-xs-offset-2">
			<h2 class="title">商品一覧</h2>
			<table class="table">
				<thead>
					<tr>
						<th>ジャンル</th>
						<th>商品名</th>
						<th>価格</th>
						<th>販売ステータス</th>
						<th></th>
						<th></th>
					</tr>
				</thead>
				<tbody>
					<% @items.each do |item| %>
						<% if item.genre.is_active == true %>
							<tr>
								<td><%= item.genre.name %></td>
								<td><%= item.name %></td>
								<td><%= item.price %>円</td>
								<% if item.sales_status == true %>
									<td><span>販売中</span></td>
								<% else %>
									<td><span style="color: red;">売り切れ</span></td>
								<% end %>
								<td><%= link_to "編集", edit_admin_item_path(item.id), class: "btn btn-default" %></td>
								<td><%= link_to "詳細", admin_item_path(item.id), class: "btn btn-default" %></td>
							</tr>
						<% else %>
							<tr>
								<td><%= item.genre.name %><span style="color: red;">(取り扱い中止)</span></td>
								<td><%= item.name %></td>
								<td><%= item.price %>円</td>
								<td><span style="color: red;">販売停止</span></td>
								<td><%= link_to "編集", edit_admin_item_path(item.id), class: "btn btn-default" %></td>
								<td><%= link_to "詳細", admin_item_path(item.id), class: "btn btn-default" %></td>
							</tr>
						<% end %>
			        <% end %>
				</tbody>
			</table>
			<div style="text-align: center;">
				<%= paginate @items, class: "paginate" %>
			</div>
			<div style="text-align: center;">
				<%= link_to "商品追加", new_admin_item_path, class: "btn btn-default", style: "margin: 15px 0;" %><br>
				<%= link_to "管理者TOP", admins_path, class: "btn btn-default", style: "margin-bottom: 15px;" %>
			</div>
		</div>
	</div>
</div>

<%= render 'layouts/admin_footer' %>
