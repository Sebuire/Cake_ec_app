<%= render 'layouts/admin_header' %>
<div class="container">
	<h1 class="title">商品一覧</h1>
	<table class="table">
		<thead>
			<tr>
				<th>ジャンル</th>
				<th>商品名</th>
				<th>商品説明</th>
				<th>価格</th>
				<th>販売ステータス</th>
			</tr>
		</thead>
		<tbody>
			<% @items.each do |item| %>
				<% if item.genre.is_active == true %>
					<tr>
						<td><%= item.genre.name %></td>
						<td><%= link_to item.name, admin_item_path(item.id) %></td>
						<td><%= item.body %></td>
						<td><%= item.price %></td>
						<td><%= item.sales_status %></td>
					</tr>
				<% end %>
	        <% end %>
		</tbody>
	</table>

	<a href="/admin/items/new" class="btn btn-default"style="margin-bottom: 15px;" >商品追加</a>
	<br>
    <a href="/admins" class="btn btn-default" style="margin-bottom: 15px;">トップ</a>

</div>
<%= render 'layouts/admin_footer' %>
