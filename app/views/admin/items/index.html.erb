<%= render 'layouts/admin_header' %>
	<div class="container">
		<h1 class="title">商品一覧</h1>
		<table class="table">
			<thead>
				<tr>
					<th>ジャンル</th>
					<th>商品名</th>
					<th>価格</th>
					<th>販売ステータス</th>
					<th></th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				<% @items.each do |item| %>
					<% if item.genre.is_active == true %>
						<tr>
							<td><%= item.genre.name %></td>
							<td><%= item.name %></td>
							<td><%= item.price %>円</td>
							<% if item.sales_status == true %>
								<td>販売中</td>
							<% else %>
								<td>売り切れ</td>
							<% end %>
							<td><%= link_to "詳細", admin_item_path(item.id), class: "btn btn-default" %></td>
							<td><%= link_to "編集", edit_admin_item_path(item.id), class: "btn btn-default" %></td>
						</tr>
					<% else %>
						<tr>
							<td><%= item.genre.name %>(取り扱い中止)</td>
							<td><%= item.name %></td>
							<td><%= item.price %>円</td>
							<td>販売停止</td>
							<td><%= link_to "詳細", admin_item_path(item.id), class: "btn btn-default" %></td>
							<td><%= link_to "編集", edit_admin_item_path(item.id), class: "btn btn-default" %></td>
						</tr>
					<% end %>
		        <% end %>
			</tbody>
		</table>
		<%= paginate @items, class: "paginate" %><br>
		<div style="text-align: center;">
			<%= link_to "商品追加", new_admin_item_path, class: "btn btn-default", style: "margin: 15px 0;" %><br>
			<%= link_to "管理者TOP", admins_path, class: "btn btn-default", style: "margin-bottom: 15px;" %>
		</div>
	</div>
<%= render 'layouts/admin_footer' %>
