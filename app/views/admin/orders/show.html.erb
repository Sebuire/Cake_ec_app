<%= render "layouts/admin_header" %>

<div class="container">
	<div class="row">
		<h3 class="">注文詳細</h3>
		<div class="col-xs-8">
			<table class="table">
				<tr>
					<th>注文ID</th><td><%= @order.id %></td>
				</tr>
				<tr>
					<th>購入者</th><td><%= @order.customer.name_last_kanji %><%=@order.customer.name_first_kanji %></td>
				</tr>
				<tr>
					<th>配送先</th><td>〒<%= @order.order_postal_code %>　<%= @order.order_address %></td><br><td><%= @order.order_name %></td>
				</tr>
				<tr>
					<th>支払い方法</th><td><%= @order.payment %></td>
				</tr>
				<tr>
					<th>注文ステータス</th>
					<td><%= form_for @order, url:admin_order_path do |f| %>
							<%= f.select :order_status, [['入金待ち', '入金待ち'], ['入金確認', '入金確認'], ['製作中', '製作中'], ['発送準備中', '発送準備中'], ['発送済み', '発送済み']] %>
							<%= f.submit '更新', class:"btn btn-default" %>
						<% end %>
					</td>
				</tr>
			</table>
		</div>
	</div>
	<div class="row">
		<div class="col-xs-8">
			<% @order.order_items.each do |o| %>
				<table class="table order_table" >
					<tr>
						<th>商品名</th>
						<th>単価（税込）</th>
						<th>個数</th>
						<th>小計</th>
						<th>製作ステータス</th>
					</tr>
					<tr>
						<td><%= o.item.name %></td>
						<td><%= o.price + @tax_price %>円</td>
						<td><%= o.quantity %>個</td>
						<td><%= @item_total_price %>円</td>
						<td>
							<%= form_for o, url:admin_order_item_path(o.id) do |f| %>
								<%= f.select :making_status, [['着手不可', '着手不可'], ['製作待ち', '製作待ち'], ['製作中', '製作中'], ['製作完了', '製作完了']] %>
								<%= f.submit '更新', class:"btn btn-default" %>
							<% end %>
						</td>
					</tr>
				</table>
			<% end %>
		</div>
		<div class="col-xs-3">
			<table class="table table-bordered">
				<tr>
					<th>商品合計</th><td><%= @total + @tax_price_all %>円</td>
				</tr>
				<tr>
					<th>送料</th><td><%= @order.postage %>円</td>
				</tr>
				<tr>
					<th>請求額合計</th><td><%= @order.total_price + @order.postage %>円</td>
				</tr>
			</table>
		</div>
	</div>
	<div style="text-align: center;">
		<%= link_to '注文一覧に戻る', admin_orders_path, class: "btn btn-default", style: "margin: 15px 0;" %>
	</div>
</div>

<%= render "layouts/admin_footer" %>