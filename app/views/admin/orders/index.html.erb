<%= render "layouts/admin_header" %>

<div class="container">
	<div class="row">
		<div class="col-xs-8 col-xs-offset-2">
			<h2 class="title">注文履歴一覧</h2>
			<table class="table">
				<thead>
					<th>注文ID</th>
					<th>注文日</th>
					<th>名前</th>
					<th>合計金額</th>
					<th>注文ステータス</th>
					<th></th>
					<th></th>
				</thead>
				<tbody>
					<% @orders.each do |order| %>
						<tr>
							<td><%= order.id %></td>
							<td><%= order.created_at.strftime('%Y/%m/%d') %></td>
							<td><%= order.customer.name_last_kanji %>　<%= order.customer.name_first_kanji %></td>
							<td><%= order.total_price%>円</td>
							<td><%= order.order_status %></td>
							<td><%= link_to '変更', edit_admin_order_path(order), class:"btn btn-default" %></td>
							<td><%= link_to '詳細',admin_order_path(order), class:"btn btn-default" %></td>
						</tr>
					<% end %>
				</tbody>
			</table>
			<%= paginate @orders, class: "paginate" %><br>
			<div style="text-align: center;">
				<%= link_to '管理者TOP', admins_path, class: "btn btn-default", style: "margin-bottom: 15px;" %>
			</div>
		</div>
	</div>
</div>

<%= render "layouts/admin_footer" %>

