<%= render "layouts/admin_header" %>
	<div class="container">
		<div class="row">
			<div class="col">
				<h1 class="title">注文履歴一覧</h1>
				<table class="table">
					<th>注文ID</th>
					<th>注文日</th>
					<th>名前</th>
					<th>合計金額</th>
					<th>注文ステータス</th>
					<th></th>
					<th></th>
					<% @orders.each do |order| %>
						<tr>
							<td><%= order.id %></td>
							<td><%= order.created_at.strftime('%Y/%m/%d') %></td>
							<td><%= order.customer.name_last_kanji %>　<%= order.customer.name_first_kanji %></td>
							<td><%= order.total_price%>円</td>
							<td><%= order.order_status %></td>
							<td><%= link_to '詳細',admin_order_path(order), class:"btn btn-default" %></td>
							<td><%= link_to '編集', edit_admin_order_path(order), class:"btn btn-default" %></td>
						</tr>
					<% end %>
				</table>
				<%= paginate @orders, class: "paginate" %><br>

				<%= link_to '管理者TOP', admins_path, class: "btn btn-default", style: "margin-bottom: 15px;" %>
			</div>
		</div>
	</div>
<%= render "layouts/admin_footer" %>

