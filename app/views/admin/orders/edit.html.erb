<%= render "layouts/admin_header" %>
	<div class="container">
		<div class="row">
			<div class="col">
				<h2>注文ステータス変更</h2>
				<div class="">
					<h3>注文情報</h3>
					<p>注文番号：<%= @order.id %></p>
					<p>注文日時：<%= @order.created_at.strftime('%Y/%m/%d') %></p>
					<p>購入者：<%= @order.customer.name_last_kanji %><%=@order.customer.name_first_kanji %></p>
				</div>
				<%= form_for @order, url:admin_order_path do |f| %>
					<%= f.select :order_status, Order.order_statuses.keys.to_a, {} %><br>
					<%= f.submit "更新", class:"btn btn-default", style: "margin: 15px 0;" %>
				<% end %>
				<%= link_to '戻る', admin_orders_path, class:"btn btn-default", style: "margin-bottom: 15px;" %>
			</div>
		</div>
	</div>
<%= render "layouts/admin_footer" %>