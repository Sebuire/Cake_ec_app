<!-- deviseを使ったadminのログイン画面です -->
<%= render 'layouts/admin_header' %>
<div class="container">
  <h2 class="title">ログイン</h2>
  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
    <p style="text-align: center;">会員登録は
    <%= link_to "こちら", new_registration_path(resource_name) %></p>
  <% end %>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="col-xs-8 col-xs-offset-2 clearfix">
        <table class="table">
          <tr>
            <th>メールアドレス</th>
            <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
          </tr>
          <tr>
            <th>パスワード</th>
            <td><%= f.password_field :password, autocomplete: "current-password" %></td>
          </tr>
          <tr>
            <th></th>
            <td><%= f.submit "ログイン", class: "btn btn-default" %></td>
          </tr>
        </table>
        <% if devise_mapping.rememberable? %>
          <div class="field">
            <p><%= f.check_box :remember_me %> 次回から入力を省略する</p>
          </div>
        <% end %>
        <%= render "admins/shared/links" %>
      </div>
  <% end %>
</div>
<%= render 'layouts/admin_footer' %>

