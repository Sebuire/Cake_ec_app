<%= render 'layouts/customer_header' %>
	<div class="container">
		<% if flash[:success] %>
			<%= flash[:success] %>
		<% end %>
		<div class="col-xs-10 col-xs-offset-1" style="margin-bottom: 50px;">
			<div style="text-align: center;">
				<%= link_to "ジャンル一覧へ", genre_path(@item.genre_id), class: "btn btn-default" %>
			</div>
		</div>
			<div class="row  clearfix" style="width: 100%;">
				<div class="col-xs-6" style="float: left; text-align: center;">
					<%= attachment_image_tag @item, :image,fallback: "noimage.jpg", style: "width:50%; margin-bottom: 10px; "%>
				</div>
				<div class="col-xs-6" style="border: height:auto; float: left; margin-bottom: 50px;">
					<h2><%= @item.name %></h2><br>
					<p><%= @item.body %></p>
					<h3>
						¥<%= @item.price + @item.price / 10 %>
					</h3>
					<% if @item.sales_status == true %>
						<span style="color: lime">販売中</span>
					<% else %>
						<span style="color: red">売り切れ</span>
					<% end %>
					<% if @item.sales_status == true %>
						<%= form_for @cart do |c| %>
							<%= c.hidden_field :item_id, :value => @item.id %>
							<%= c.select :quantity, options_for_select(@quantity) %>
							<%= c.submit "カートに入れる", class: "btn btn-default" %>
						<% end %>
					<% end %>
				</div>
				<div style="text-align: center; margin-bottom: 45px;">
					<%= link_to "カートを見る",carts_path, class: "btn btn-default" %>
				</div>
			</div>
		</div>
<%= render 'layouts/customer_footer' %>