<h1>マイページ編集</h1>
<div class="container">
	<div class="row">
		<div class="col">
			<div class="col">
				<h1>編集画面</h1>
				<%= form_for(@customer) do |f| %>
					<h4>氏名(漢字)</h4>
				    <%= f.text_field :name_last_kanji %>
				    <%= f.text_field :name_first_kanji %>

				    <h4>氏名(仮名)</h4>
				    <%= f.text_field :name_last_kana %>
				    <%= f.text_field :name_first_kana %>

				    <h4>email</h4>
				    <%= f.email_field :email %>

				    <h4>電話番号</h4>
				    <%= f.telephone_field :phone_number %>

				    <h4>住所</h4>
				    <%= f.fields_for :addresses do |a| %>
				    	<h6>郵便番号<%= @times += 1 %></h6>
				    	<%= a.text_field :postal_code  %>
				    	<h6>住所<%= @times %></h6>
				    	<%= a.text_field :address  %>
				    <% end %>

			    	<%= f.submit '保存',class: "btn btn-default" %>
			    <% end %>
    		</div>
		</div>
	</div>
</div>


