<%= render 'layouts/customer_header' %>
<h2 class="title">マイページ編集</h2>
<div class="container">
	<div class="row">
		<div class="col">
			<div class="col-xs-6 col-xs-offset-3">
				<%= form_for(@customer) do |f| %>
					<table class="table">
						<tr>
							<th>名前(姓)</th>
							<td><%= f.text_field :name_last_kanji %></td>
						</tr>
						<tr>
							<th>名前(名)</th>
							<td><%= f.text_field :name_first_kanji %></td>
						</tr>
						<tr>
							<th>フリガナ(姓)</th>
							<td><%= f.text_field :name_last_kana %></td>
						</tr>
						<tr>
							<th>フリガナ(名)</th>
							<td><%= f.text_field :name_first_kana %></td>
						</tr>
						<tr>
							<th>メールアドレス</th>
							<td><%= f.text_field :email %></td>
						</tr>
						<tr>
							<th>電話番号(ハイフン不要)</th>
							<td><%= f.telephone_field :phone_number %></td>
						</tr>
							<tr>
								<th></th>
								<td><%= f.submit '保存',class: "btn btn-default" %></td>
							</tr>
					</table>
			    <% end %>
			    <div style="text-align: center;">
			    	<%= link_to "マイページへ", customer_path(@customer), class: "btn btn-default", style: "margin-bottom: 40px;" %>
			    </div>
    		</div>
		</div>
	</div>
</div>
<%= render 'layouts/customer_footer' %>


