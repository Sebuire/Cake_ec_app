<%= render 'layouts/customer_header' %>

<h1 class="title">マイページ</h1>
<div class="container">
	<div class="row">
		<div class="col-xs-6 col-xs-offset-3">
			<div style="text-align: right;">
				<p style="margin-bottom: 10px;"><%= link_to "編集", edit_customer_path(@customer), class: "btn btnpink" %>
				<%= link_to "パスワード変更", "#", class: "btn btnpink" %></p>
			</div>
			<table class="table table-bordered">
				<tr>
					<th class="warning">氏名</th>
					<td><%= @customer.name_last_kanji %><%= @customer.name_first_kanji %></td>
				</tr>
				<tr>
					<th class="warning">フリガナ</th>
					<td><%= @customer.name_last_kana %><%= @customer.name_first_kana %></td>
				</tr>
				<% @address.first(1).each do |f| %>
				<tr>
					<th class="warning">郵便番号</th>
					<td><%= f.postal_code %></td>
				</tr>
				<tr>
					<th class="warning">住所</th>
					<td><%= f.address %></td>
				</tr>
				<% end %>
				<tr>
					<th class="warning">電話番号</th>
					<td><%= @customer.phone_number %></td>
				</tr>
				<tr>
					<th class="warning">メールアドレス</th>
					<td><%= @customer.email %></td>
				</tr>
			</table>
		    <div style="text-align: right; margin-bottom: 20px;">
		        <%= link_to "退会",customer_path(current_customer.id), method: :delete, data: {confirm: "退会するとアカウントが消去されます。よろしいですか？"}, class: "btn btngray" %>
		    </div>
		</div>
        <div style="text-align: center;">
			<div style="margin-bottom: 20px;" class="col-xs-6 col-xs-offset-3">
				<%= link_to "配送先一覧", addresses_path, class: "btn btnpink" %>
			</div>

			<div style="margin-bottom: 30px;" class="col-xs-6 col-xs-offset-3">
				<%= link_to "注文履歴", customer_order_path(current_customer.id), class: "btn btnpink" %>
			</div>
		</div>
	</div>
</div>
<%= render 'layouts/customer_footer' %>



