<%= render 'layouts/customer_header' %>
<div class="container">
  <h2 class="title"><strong>会員登録</strong></h2>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <div class="col-xs-6 col-xs-offset-3 clearfix">
      <table class="table">
        <tr>
          <th>名前(姓)</th>
          <td><%= f.text_field :name_last_kanji, autofocus: true %></td>
        </tr>
        <tr>
          <th>名前(名)</th>
          <td><%= f.text_field :name_first_kanji %></td>
        </tr>
        <tr>
          <th>フリガナ(姓)</th>
          <td><%= f.text_field :name_last_kana %></td>
        </tr>
        <tr>
          <th>フリガナ(名)</th>
          <td><%= f.text_field :name_first_kana %></td>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <td><%= f.email_field :email, autocomplete: "email" %></td>
        </tr>
        <tr>
          <th>電話番号</th>
          <td><%= f.text_field :phone_number, :placeholder => "ハイフン不要" %></td>
        </tr>
        <%= f.fields_for :address do |a| %>
        <tr>
          <th>住所</th>
          <td><%= a.text_field :address %></td>
        </tr>
        <tr>
          <th>郵便番号</th>
          <td><%= a.text_field :postal_code, :placeholder => "ハイフン不要" %></td>
        </tr>
        <% end %>
        <tr>
          <th>
            <% if @minimum_password_length %>
            パスワード入力
            <% end %>
          </th>
          <td><%= f.password_field :password, autocomplete: "new-password", :placeholder => "6文字以上" %></td>
        </tr>
        <tr>
          <th>パスワード確認</th>
          <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
        </tr>
        <tr>
          <th></th>
          <td><%= f.submit "会員登録", class: "btnbrown" %></td>
        </tr>
      </table>
      <%= render "customers/shared/links" %>
    </div>
  <% end %>
</div>
<%= render 'layouts/customer_footer' %>