<%= render 'layouts/customer_header' %>
<div class="container">
  <h2 class="title">会員登録</h2>
  <%= render "customers/shared/links" %>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <div class="col-xs-8 col-xs-offset-2 clearfix">
      <table class="table">
        <tr>
          <th>名前(姓)</th>
          <td><%= f.text_field :name_last_kanji, autofocus: true %></td>
        </tr>
        <tr>
          <th>名前(名)</th>
          <td><%= f.text_field :name_first_kanji %></td>
        </tr>
        <tr>
          <th>フリガナ(姓)</th>
          <td><%= f.text_field :name_last_kana %></td>
        </tr>
        <tr>
          <th>フリガナ(名)</th>
          <td><%= f.text_field :name_first_kana %></td>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <td><%= f.email_field :email, autocomplete: "email" %></td>
        </tr>
        <tr>
          <th>電話番号 (ハイフン不要)</th>
          <td><%= f.text_field :phone_number %></td>
        </tr>
        <%= f.fields_for :address do |a| %>
        <tr>
          <th>住所</th>
          <td><%= a.text_field :address %></td>
        </tr>
        <tr>
          <th>郵便番号 (ハイフン不要)</th>
          <td><%= a.text_field :postal_code %></td>
        </tr>
        <% end %>
        <tr>
          <th>
            <% if @minimum_password_length %>
            <em>パスワード入力 (<%= @minimum_password_length %>文字以上)</em>
            <% end %>
          </th>
          <td><%= f.password_field :password, autocomplete: "new-password" %></td>
        </tr>
        <tr>
          <th>パスワード確認</th>
          <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
        </tr>
        <tr>
          <th></th>
          <td><%= f.submit "会員登録", class: "btn btn-default" %></td>
        </tr>
      </table>
      <%= render "customers/shared/links" %>
    </div>
  <% end %>
</div>
<%= render 'layouts/customer_footer' %>