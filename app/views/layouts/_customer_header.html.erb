<header style="width: 100%; height: 130px; border-bottom: 1px solid palevioletred; padding: 10px 0;">
	<% if customer_signed_in? %>
		<%= link_to "ログアウト", destroy_customer_session_path, method: :delete, style: "margin: 0 5px; box-shadow:0px 0px 10px;", class: "btn btngray" %>
		<%= link_to "ご利用ガイド", guide_path, style: "margin: 0 5px; box-shadow:0px 0px 10px;", class: "btn btnpink" %>
		<%= link_to "カート🛒", carts_path, style: " margin: 0 5px; box-shadow:0px 0px 10px;", class: "btn btnpink" %>
		<%= link_to "マイページ", customer_path(current_customer), style: "margin: 0 5px; box-shadow:0px 0px 10px;", class: "btn btnpink" %>
