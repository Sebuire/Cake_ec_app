<header class="customer-header">
	<% if customer_signed_in? %>
		<div class="cutomer-header-nav">
			<span class="logincustomer">ようこそ<%= link_to customer_path(current_customer), style: "color: #440000; text-shadow: 0px 0px 1px;" do |f| %>
				<%= current_customer.name_last_kanji %><%= current_customer.name_first_kanji %>
			<% end %>
			さん</span>
			<%= link_to "ログアウト", destroy_customer_session_path, method: :delete, data: {confirm: "ログアウトします。よろしいですか？"}, class: "logout" %>
			<%= link_to "ご利用ガイド", guide_path, class: "guide" %>
			<%= link_to (carts_path) do %>
				<span class="cart">カート<%= fa_icon("shopping-cart") %></span>
			<% end %>
			<%= link_to "マイページ", customer_path(current_customer), class: "mypage" %>
		</div>
		<div class="form-box">
			<%= form_tag(items_path,:method => 'get') do %>
			  <%= text_field_tag(:search, "", {placeholder: "商品名"}) %>
			  <%= submit_tag '検索', :name => nil %>
			<% end %>
		</div>
	<% else %>
		<div class="cutomer-header-nav">
			<span class="logincustomer">ようこそゲストさん</span>
			<%= link_to "ログイン", new_customer_session_path, class: "login" %>
			<%= link_to "会員登録", new_customer_registration_path, class: "signup" %>
			<%= link_to "会社概要","/about", class: "about" %>
			<%= link_to "ご利用ガイド", "/guide", class: "guide" %>
		</div>
		<div class="form-box">
			<%= form_tag(items_path,:method => 'get') do %>
			  <%= text_field_tag(:search, "", {placeholder: "商品名"}) %>
			  <%= submit_tag '検索', :name => nil %>
			<% end %>
		</div>
	<% end %>
		<div class="site-title" >
			<%= link_to "ながのCAKE",root_path %>
		</div>
</header>
<button class="to-top">
	 <%= fa_icon("chevron-circle-up") %>
</button>