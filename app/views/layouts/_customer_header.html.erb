	<% end %>
	<h1 style="text-align: center; line-height: 55px;"><a href="/" style="text-decoration: none; color: palevioletred; text-shadow: 0px 0px 3px;">ながのCAKE</a></h1>
</header>
<% if customer_signed_in? %>
	<h5 style="color: palevioletred; padding: 0 5px; text-shadow: 0px 0px 1.5px;">ようこそ<%= link_to customer_path(current_customer), style: "color: palevioletred; text-shadow: 0px 0px 1.5px;" do |f| %>
		<%= current_customer.name_last_kanji %><%= current_customer.name_first_kanji %>
	<% end %>
	さん</h5>
