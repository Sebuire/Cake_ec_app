
<%= render 'layouts/customer_header' %>

<h1 class="title">配送先一覧</h1>
<div class="container">
	<div class="row">
		<div class="col">
			<div class="col-xs-6 col-xs-offset-3">
				<% @customer.addresses.each do |f| %>
				<div style="text-align: center;">
					<h3>配送先</h3>
				</div>
					<table class="table table-bordered">
						<tr>
								<th>住所</th>
								<td><%= f.address %></td>
						</tr>
						<tr>
							<th>郵便番号</th>
							<td><%= f.postal_code %></td>
						</tr>
					</table>
					<tr>
						<div style="text-align: center; margin-bottom: 40px;">
							<%= link_to "配送先を変更する",edit_address_path(f.id), class: "btn btn-default" %></div>
						</div>
					</tr>
				<% end %>
			</div>

		</div>
	</div>
</div>
<%= render 'layouts/customer_footer' %>




