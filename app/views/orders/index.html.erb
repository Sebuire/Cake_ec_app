<%= render 'layouts/customer_header' %>
<div class="container">
	<div class="row">
		<div class="col-xs-10 col-xs-offset-1" style="margin-bottom: 30px;">
			<h3 class="title">注文履歴一覧</h3>
			<table class="table table-bordered" style="text-align: center;">
				<tr>
			 		<th>注文ID</th>
			 		<th>注文日</th>
			 		<th>商品</th>
			 		<th>配送先</th>
			 		<th>注文ステータス</th>
			 		<th>支払い金額</th>
			 		<th></th>
				</tr>
				<% @customer.orders.each do |f| %>
				 	<tr>
				 		<td style="vertical-align: middle"><%= f.id %></td>
				 		<td style="vertical-align: middle"><%= f.created_at.strftime("%Y年%m月%d日") %></td>
				 		<td style="vertical-align: middle">
				 			<% f.order_items.each do |o| %>
				 				<%= o.item.name %>
				 				<br>
				 			<% end %>
				 		</td>
				 		<td>
				 			〒<%= f.order_postal_code %>
				 			<br>
				 			<%= f.order_address %>
				 			<br>
				 			<%= f.order_name %>
				 		</td>
				 		<td style="vertical-align: middle"><%= f.order_status %></td>
				 		<td style="vertical-align: middle"><%= f.total_price %>円</td>
				 		<td style="vertical-align: middle">
				 			<%= link_to "注文内容詳細", order_item_path(f.id), class: "btn btnpink" %>
				 		</td>
				 	</tr>
				<% end %>
			</table>
		</div>
	</div>
</div>
<%= render 'layouts/customer_footer' %>
