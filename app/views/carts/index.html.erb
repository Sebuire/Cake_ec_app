<%= render 'layouts/customer_header' %>
<div class="container clearfix">
	<h2 class="title">カート</h2>
	<div style="width: 100%;">
		<% if @customer.carts.present? %>
			<% if flash[:notice] %>
				<%= flash[:notice] %><br>
			<% end %>
			<div class="clearfix" style="width: 100%;">
				<% @customer.carts.each do |c| %>
				<div class="col-xs-5" style="float: left; margin-bottom: 40px;">
					<%= link_to item_path(c.item_id) do %>
						<%= attachment_image_tag c.item, :image %><br>
						<span>商品名 : <%= c.item.name %></span>
						<p>価格 : <%= c.item.price %>円</p>
					<% end %>
				<%= form_for c do |g| %>
						<%= g.select :quantity, options_for_select(@quantity, {selected: c.quantity}) %>
				    	<%= g.submit "数量変更", class: "btn btn-default",style: "margin: 0 10px;" %>
				    	<%= link_to "削除", cart_path(c), method: :delete, class: "btn btn-danger" %>
					<% end %>
				</div>
			<% end %>
			</div>
			<div style="text-align: center; margin-bottom: 50px;">
				<%= link_to "購入画面に進む", orders_address_path, class: "btn btn-success" %>
				<%= link_to "カートを空にする", cart_delete_all_path, method: :delete, class: "btn btn-danger" %>
			</div>
		<% else %>
			<h5 class="title">お客様のカートに商品はありません。</h5>
		<% end %>
	</div>
</div>
<%= render 'layouts/customer_footer' %>
