<%= render 'layouts/customer_header' %>
	<% if @customer.carts.present? %>
		<% @customer.carts.each do |c| %>
			<%= link_to item_path(c.item_id) do %>
				<%= c.item.name %>
				<%= attachment_image_tag c.item, :image %>
			<% end %>
			<%= form_for c do |g| %>
				<%= g.select :quantity, options_for_select(@quantity, {selected: c.quantity}) %>
			    <%= g.submit "数量変更" %>
			    <%= link_to "削除", cart_path(c), method: :delete %>
			<% end %>
		<% end %>
		<%= link_to "購入画面に進む", orders_address_path %>
		<% if flash[:notice] %>
			<%= flash[:notice] %><br>
		<% end %>
		<%= link_to "カートを空にする", cart_delete_all_path, method: :delete %>
	<% else %>
		<h5 class="title">お客様のカートに商品はありません。</h5>
	<% end %>
<%= render 'layouts/customer_footer' %>
